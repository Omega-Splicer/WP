<Page
    x:Class="OmegaSplicer.FlyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OmegaSplicer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{StaticResource DataContext}">


    <Page.Background>
        <ImageBrush ImageSource="Assets/no_man_sky.png" AlignmentY="Top" AlignmentX="Center"/>
    </Page.Background>

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <!--
        <Grid.Background>
            <ImageBrush ImageSource="Assets/no_man_sky.png" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#80FFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Slider Maximum="250" Name="slValue" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ElementName=slValue, Path=Value}" Width="40" Height="40" Grid.Row="2"/>
            <Image Grid.Row="0" Source="{Binding SelectedModule.Battery}" Stretch="UniformToFill" Width="40" Height="40"/>
        </Grid>
        <Grid Grid.Column="2" Background="#80FFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="Assets/rss.png" Stretch="UniformToFill" Width="40" Height="40"/>
            <Image x:ConnectionId='1' Grid.Row="2" Source="Assets/Home_white.png" Stretch="UniformToFill" Width="40" Height="40"                  />
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ContentControl Grid.Row="0" HorizontalContentAlignment="Stretch" ContentTemplate="{StaticResource TitleTemplate}" Content="{Binding SelectedModule.Name}"/>
            <Border  Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Canvas Name="joystickBox" Height="200" Width="200">
                    <Ellipse Fill="#80FFFFFF" Stroke="White" Width="150" Height="150" Canvas.Left="25" Canvas.Top="25" />
                    <Canvas  Width="75" Height="75" Canvas.Left="62.5" Canvas.Top="62.5" >
                        <Ellipse Name="joystick" Fill="White" Width="75" Height="75" Canvas.Left="{Binding SelectedJoystick.JoystickX, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 Canvas.Top="{Binding SelectedJoystick.JoystickY, UpdateSourceTrigger=PropertyChanged}" />
                    </Canvas>
                </Canvas>
            </Border>
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
<!--
                <TextBox Text="{Binding SelectedJoystick.JoystickY}" Width="40" Height="40"/>
                <TextBox Text="{Binding SelectedJoystick.JoystickX}" Width="40" Height="40"/>
-->
                <TextBox Text="{Binding SelectedGyro.AccelX, UpdateSourceTrigger=PropertyChanged}" Width="80" Height="40"/>
                <TextBox Text="{Binding SelectedGyro.AccelY, UpdateSourceTrigger=PropertyChanged}" Width="80" Height="40"/>
                <TextBox Text="{Binding SelectedGyro.AccelZ, UpdateSourceTrigger=PropertyChanged}" Width="80" Height="40"/>
            </StackPanel>
        </Grid>
    </Grid>
    <!--
    <Page.BottomAppBar>
        <CommandBar Background="#991F1F1F">
            <AppBarButton x:Name="AddAppBarButton" Label="Home" Icon="Home" Click="MainPage"/>
        </CommandBar>
    </Page.BottomAppBar>
-->
</Page>

